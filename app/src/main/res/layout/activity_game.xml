<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    tools:context="com.experitest.qasimsobeh.task1.GameActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView_wifiName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wifi" />

        <TextView
            android:id="@+id/textView_GPS_Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude" />

        <TextView
            android:id="@+id/textView_GPS_Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude" />

        <TextView
            android:id="@+id/textView_remainingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAlignment="center"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layoutGame"
            android:layout_width="match_parent"
            android:layout_height="296dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="invisible"
                app:srcCompat="?android:attr/textSelectHandle" />

            <Button
                android:id="@+id/button_startGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="87dp"
                android:text="Start The Game" />

        </RelativeLayout>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/AlertDialog.AppCompat.Light" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
